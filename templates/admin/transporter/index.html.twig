{% extends 'base.html.twig' %}

{% block title %}Transporter index{% endblock %}

{% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img src="images/bannieres/banniere-boutique.jpg" class="d-block w-100 " alt="tubes" style="height: 200px;">
            </div>
        </div>        
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}

{% block produits %}
    <h1>Transporter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomTransporter</th>
                <th>Description</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transporter in transporters %}
            <tr>
                <td>{{ transporter.id }}</td>
                <td>{{ transporter.nomTransporter }}</td>
                <td>{{ transporter.description }}</td>
                <td>{{ transporter.prix }}</td>
                <td>
                    <a href="{{ path('app_admin_transporter_show', {'id': transporter.id}) }}">show</a>
                    <a href="{{ path('app_admin_transporter_edit', {'id': transporter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_transporter_new') }}">Create new</a>
{% endblock %}
